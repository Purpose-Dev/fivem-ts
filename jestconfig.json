{
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "js", "json", "node"],
    "reporters": [
        "default",
        [
            "jest-junit",
            {
                "outputDirectory": "./test-results",
                "outputName": "jest-junit.xml"
            }
        ]
    ]
}
